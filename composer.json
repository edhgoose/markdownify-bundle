{
  "name": "pk/markdownify-bundle",
  "type": "symfony-bundle",
  "description": "Symfony2 bundle that integrates the Markdownify class as a service",
  "keywords": ["markdown", "markdownify"],
  "license": "MIT",
  "homepage": "http://github.com/pkruithof/markdownify-bundle",
  "authors": [
    {
      "name": "Peter Kruithof",
      "email": "pkruithof@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.5.9",
    "symfony/framework-bundle": "^2.7|^3.0",
    "pixel418/markdownify": "^2.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.5"
  },
  "autoload": {
    "psr-4": {
      "PK\\MarkdownifyBundle\\": "src/PK/MarkdownifyBundle/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PK\\MarkdownifyBundle\\Tests\\": "tests/PK/MarkdownifyBundle/"
    }
  }
}
